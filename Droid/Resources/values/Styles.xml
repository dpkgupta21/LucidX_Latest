   <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">   
    <item name="colorPrimary">@color/ColorPrimary</item>
    <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    <item name="colorAccent">@color/white</item>
    <item name="colorControlActivated">@color/ColorPrimaryDark</item>
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowDisablePreview">true</item>
  </style>


  <style name="DialogTheme" parent="android:Theme.Material.Light.Dialog">
    <item name="colorAccent">@color/ColorPrimary</item>
    <item name="windowNoTitle">false</item>
  </style>
  

  <style name="tv_big_heading">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/tv_big_heading</item>
    <item name="android:textColor">@color/text_color</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="tv_style">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/tv_heading</item>
    <item name="android:textColor">@color/text_color</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="et_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:singleLine">true</item>
    <item name="android:padding">@dimen/et_padding</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:background">@drawable/edittextbg</item>
    <item name="android:textSize">@dimen/et_text_size</item>
    <item name="android:textColor">@color/et_text_color</item>
    <item name="android:textColorHint">@color/et_text_hint_color</item>
  </style>

  <style name="btn_rounded_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/btn_text_size</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:paddingBottom">@dimen/text_padding</item>
    <item name="android:paddingTop">@dimen/text_padding</item>
    <item name="android:paddingRight">@dimen/text_padding</item>
    <item name="android:paddingLeft">@dimen/text_padding</item>
    <item name="android:background">@drawable/btn_color_selector</item>
    <item name="android:textAllCaps">false</item>
    
  </style>
</resources>
